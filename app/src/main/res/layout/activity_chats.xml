    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/header_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/gorillaz_1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Individual Chats"
            android:textColor="@color/own_black"
            android:textSize="24sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            android:textColor="@color/own_black"
            android:fontFamily="@font/gorillaz_1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="Groups" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/own_black"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_tab" />
</androidx.constraintlayout.widget.ConstraintLayout>

