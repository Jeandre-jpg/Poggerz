<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.example.poggerz.fragments.SettingsFragment">

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:padding="30dp"
        android:backgroundTint="@color/own_black"
        android:background="@drawable/ic_back"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="350dp"
        android:padding="30dp"
        android:backgroundTint="@color/own_black"
        android:background="@drawable/ic_settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gorillaz_1"
            android:gravity="center"
            android:text="Welcome back, Jeandre"
            android:textColor="@color/own_black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-180dp"
        android:background="@color/blue"
        android:gravity="center">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user"
            />

    </LinearLayout>


    <ImageButton
        android:id="@+id/one"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="230dp"
       android:background="@drawable/icon_2d_first" />

    <ImageButton
        android:id="@+id/two"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_murdoc_first" />

    <ImageButton
        android:id="@+id/three"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_noodle_first" />

    <ImageButton
        android:id="@+id/four"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_russel_first" />

    <ImageButton
        android:id="@+id/five"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_extra_first" />

    <ImageButton
        android:id="@+id/six"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_noodle_third" />



    <ImageButton
        android:id="@+id/seven"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_2d_second" />

    <ImageButton
        android:id="@+id/eight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/icon_murdoc_second" />

    <ImageButton
        android:id="@+id/nine"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_noodle_second" />

    <ImageButton
        android:id="@+id/ten"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_russel_second" />

    <ImageButton
        android:id="@+id/eleven"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_murdoc_third" />

    <ImageButton
        android:id="@+id/twelve"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_russel_third" />


    <ImageButton
        android:id="@+id/thirteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_2d_fourth" />

    <ImageButton
        android:id="@+id/fourteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_russel_fourth" />

    <ImageButton
        android:id="@+id/fifteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_noodle_fourth" />

    <ImageButton
        android:id="@+id/sixteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/icon_logo_band" />

    <ImageButton
        android:id="@+id/seventeen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/icon_2d_third" />

    <ImageButton
        android:id="@+id/eighteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/icon_hank_first"/>

    <ImageButton
        android:id="@+id/nineteen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/logo"/>

    <ImageButton
        android:id="@+id/twenty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:alpha="0.6"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/user"/>



    ///////////////////////////////////////


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_marginTop="400dp"
        android:textColorHint="@color/blue"
        app:boxStrokeColor="@color/sea_foam"
        android:backgroundTint="@color/own_black"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:boxStrokeColor="@color/sea_foam"
            android:backgroundTint="@color/own_black"
            app:boxStrokeWidth="2dp"
            android:textColor="@color/blue"
            android:hint="Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="460dp"
        android:layout_width="350dp"
        android:textColorHint="@color/blue"
        app:boxStrokeColor="@color/sea_foam"
        android:backgroundTint="@color/own_black"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:boxStrokeColor="@color/sea_foam"
            android:backgroundTint="@color/own_black"
            app:boxStrokeWidth="2dp"
            android:textColor="@color/blue"
            android:hint="Email"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="520dp"
        android:layout_width="350dp"
        android:textColorHint="@color/blue"
        app:boxStrokeColor="@color/sea_foam"
        android:backgroundTint="@color/own_black"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:boxStrokeColor="@color/sea_foam"
            android:backgroundTint="@color/own_black"
            app:boxStrokeWidth="2dp"
            android:textColor="@color/blue"
            android:hint="Password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="580dp"
        android:layout_width="350dp"
        android:textColorHint="@color/blue"
        app:boxStrokeColor="@color/sea_foam"
        android:backgroundTint="@color/own_black"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:boxStrokeColor="@color/sea_foam"
            android:backgroundTint="@color/own_black"
            app:boxStrokeWidth="2dp"
            android:textColor="@color/blue"
            android:hint="Confirm Password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="640dp"
        android:layout_width="350dp"
        android:textColorHint="@color/blue"
        app:boxStrokeColor="@color/sea_foam"
        android:backgroundTint="@color/own_black"
        app:boxStrokeWidth="2dp">
        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/age"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:boxStrokeColor="@color/sea_foam"
            android:backgroundTint="@color/own_black"
            app:boxStrokeWidth="2dp"
            android:textColor="@color/blue"
            android:hint="Age"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="680dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="bold"
        android:textColor="@color/own_white"
        android:backgroundTint="@color/pink"
        android:text="Finished" />


</FrameLayout>

