<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/army_green"
    tools:context="com.example.poggerz.fragments.HomeFragment" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/icon_2d_third" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp">

        <TextView
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gorillaz_1"
            android:textSize="50sp"
            android:textColor="@color/own_black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Welcome!" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/army_green"
        android:gravity="center"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="700dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:padding="30dp"
            android:textStyle="bold"
            android:text="Welcome to the official Poggerz website about all thing Gorillaz!"
            android:textColor="@color/yellow"
            android:textSize="15dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/textView4"
        android:gravity="center"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/gorillaz_1"
        android:textSize="30sp"
        android:padding="20dp"
        android:textColor="@color/own_black"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Start chatting today!" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="600dp">
    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:gravity="center"

        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="bold"
        android:backgroundTint="@color/pink"
        android:text="Start Chatting"
        android:layout_marginTop="50dp"/>
    </LinearLayout>
</FrameLayout>