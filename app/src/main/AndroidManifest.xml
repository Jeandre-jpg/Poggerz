<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poggerz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poggerz.NoActionBar">
        <activity android:name="com.example.poggerz.BaseActivity"></activity>
      <activity android:name="com.example.poggerz.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
     <activity android:name="com.example.poggerz.LoadingActivity">
        </activity>
        <activity android:name="com.example.poggerz.AuthenticationActivity">
        </activity>
        <activity android:name="com.example.poggerz.MainActivity">
        </activity>
    </application>

</manifest>